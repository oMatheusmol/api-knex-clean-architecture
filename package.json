{
  "name": "api-clean-architecture",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "lint-staged": {
    "*.{js,jsx}": [
      "npm run test"
    ],
    "*.js": "eslint --cache --fix"
  },
  "scripts": {
    "build": "npx tsc",
    "database:up": "docker-compose up -d",
    "database:down": "docker-compose down",
    "docker:dropAll": "docker stop $(docker ps -a -q) && docker system prune -f",
    "migrate:make": "knex --knexfile src/infrastructure/knex/knexfile.ts migrate:make",
    "migrate": "knex --knexfile ./src/infrastructure/knex/knexfile.ts migrate:latest",
    "migrate:list": "knex --knexfile ./src/infrastructure/knex/knexfile.ts migrate:list",
    "migrate:roll": "knex --knexfile ./src/infrastructure/knex/knexfile.ts migrate:rollback",
    "lint": "eslint src",
    "test": "jest --bail --runInBand --silent --setupFiles",
    "test:lintStaged": "npm test -- --findRelatedTests",
    "prepare": "husky install"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^27.0.3",
    "@types/knex": "^0.16.1",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "eslint": "^8.3.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.4.2",
    "lint-staged": "^12.1.2",
    "prettier": "^2.5.0",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.2"
  },
  "dependencies": {
    "knex": "^0.95.14",
    "mysql2": "^2.3.3"
  }
}
